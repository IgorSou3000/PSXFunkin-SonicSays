<?xml version="1.0" encoding="UTF-8"?>

<!-- Defines the ISO project -->
<iso_project image_name="sonicsays.bin" cue_sheet="sonicsays.cue" no_xa="0">
	<!-- Data track -->
	<track type="data">
		<!-- Identifiers -->
		<identifiers
			system        = "PLAYSTATION"
			application   = "PLAYSTATION"
			volume        = "PSXFUNKIN"
			volume_set    = "PSXFUNKIN"
			publisher     = "CUCKYDEV"
			copyright     = "NINJAMUFFIN99"
		/>
		<license file="licensea.dat"/>
		
		<!-- Data directory tree -->
		<directory_tree>
			<!-- System -->
			<file name = "system.cnf" type = "data" source = "iso/system.cnf"/>
			<file name = "SCUS_191.25" type = "data" source = "funkin.ps-exe"/>
			<file name = "save16.tim" type = "data" source = "iso/save16.tim"/>
			
			<!-- Menu assets -->
			<dir name = "menu">
				<file name = "loading.tim" type = "data" source = "iso/menu/loading.tim"/>
				<file name = "menu.arc" type = "data" source = "iso/menu/menu.arc"/>
			</dir>
			
			<!-- Fonts -->
			<dir name = "font">
				<file name = "fonts.tim" type = "data" source = "iso/fonts/fonts.tim"/>
			</dir>
			
			<!-- Stage assets -->
			<dir name = "hud">
				<file name = "hud.arc" type = "data" source = "iso/hud/hud.arc"/>
			</dir>
			
			<!-- Week1 assets -->
			<dir name = "week1">
				<!-- Background art -->
				<file name = "back.arc" type = "data" source = "iso/stages/week1/back.arc"/>	
		
				<file name = "1.1h.cht" type = "data" source = "iso/songs/no-good/no-good-hard.cht"/>
				<file name = "1.2h.cht" type = "data" source = "iso/songs/no-good-old/no-good-hard.cht"/>
			</dir>
			<!-- Character assets -->
			<dir name = "char">
				<!-- Boyfriend assets -->
				<file name = "bfdead.tim" type = "data" source = "iso/characters/bf/dead.tim"/>
			
				<!-- Sonic assets -->
				<file name = "sonic.arc" type = "data" source = "iso/characters/sonic/main.arc"/>
				
				<!-- Sonic Old assets -->
				<file name = "sonicold.arc" type = "data" source = "iso/characters/sonic_old/main.arc"/>
			</dir>

			<!-- Sounds effects -->
			<dir name = "sounds">
				<!-- Menu Sounds -->
				<file name = "menu.vag" type = "data" source = "iso/sounds/menu/main.vags"/>

				<!-- Stage Sounds -->
				<file name = "stage.vag" type = "data" source = "iso/sounds/stage/main.vags"/>
			</dir>

			<!-- Songs -->
			<dir name = "songs">
				<file name = "menu.mus" type = "xa" source = "iso/songs/menu.mus"/>
				<file name = "week1a.mus" type = "xa" source = "iso/songs/week1a.mus"/>
			</dir>
			
			<!-- Dummy sectors -->
			<dummy sectors="1024"/>
		</directory_tree>
	</track>
</iso_project>
